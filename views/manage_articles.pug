extends layout

block content
  .container
    .row
      .col-md-9
        h1 #{title}
      .col-md-3
        a.btn.btn-default.create-btn(href="/manage/articles/add") Add Article
    table(class='table table-striped')
      tr
        th Article Title
        th Date Published
        th Author
        th
      each article, i in articles
        tr
          td #{article.title}
          td #{moment(article.created_at).format('MMMM Do, YYYY')}
          td #{article.author}
          td
            a.btn.btn-tiny.btn-default(href='/manage/articles/edit/'+article._id) Edit
